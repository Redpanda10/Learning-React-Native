////////////npm install @react-native-async-storage/async-storage



import React, { useState } from "react";
import { View, TextInput, Button, Alert, StyleSheet, Text } from "react-native";
import AsyncStorage from "@react-native-async-storage/async-storage";

export default function AsyncCrudExample() {
  const [name, setName] = useState("");

  // CREATE or UPDATE (Upsert)
  const saveData = async () => {
    try {
      await AsyncStorage.setItem("userName", name);
      Alert.alert("Success üéâ", "Data saved successfully!");
      setName("");
    } catch (error) {
      Alert.alert("Error ‚ùå", "Failed to save data!");
    }
  };

  // READ
  const getData = async () => {
    try {
      const value = await AsyncStorage.getItem("userName");
      if (value !== null) {
        Alert.alert("Stored Name", value);
      } else {
        Alert.alert("Empty üì≠", "No data found!");
      }
    } catch (error) {
      Alert.alert("Error ‚ùå", "Unable to load data!");
    }
  };

  // UPDATE (Same as save but just an alert message change)
  const updateData = async () => {
    try {
      if (!name) {
        Alert.alert("Warning ‚ö†Ô∏è", "Enter a name to update!");
        return;
      }
      await AsyncStorage.setItem("userName", name);
      Alert.alert("Updated ‚ú®", "Data updated successfully!");
      setName("");
    } catch (error) {
      Alert.alert("Error ‚ùå", "Failed to update data!");
    }
  };

  // DELETE
  const removeData = async () => {
    try {
      await AsyncStorage.removeItem("userName");
      Alert.alert("Deleted üóëÔ∏è", "Data removed successfully!");
    } catch (error) {
      Alert.alert("Error ‚ùå", "Failed to delete data!");
    }
  };

  return (
    <View style={styles.container}>
      <Text style={styles.label}>Enter Name:</Text>
      
      <TextInput
        style={styles.input}
        placeholder="Enter your name"
        placeholderTextColor="#aaa"
        value={name}
        onChangeText={(val) => setName(val)}
      />

      <View style={styles.buttonContainer}>
        <Button title="Save" onPress={saveData} />
        <Button title="Get" onPress={getData} />
        <Button title="Update" onPress={updateData} />
        <Button title="Delete" onPress={removeData} />
      </View>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    padding: 25,
    backgroundColor: "#000",
    justifyContent: "center",
  },
  label: {
    color: "#fff",
    fontSize: 22,
    marginBottom: 10,
  },
  input: {
    borderWidth: 2,
    borderColor: "#8A2BE2",
    borderRadius: 10,
    padding: 12,
    fontSize: 18,
    color: "#fff",
    marginBottom: 20,
  },
  buttonContainer: {
    gap: 10,
  }
});




