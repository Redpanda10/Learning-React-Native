import React, { useState } from "react";
import {
  View,
  Text,
  TextInput,
  StyleSheet,
  TouchableOpacity,
  Alert,
  Platform,
} from "react-native";
import Icon from "react-native-vector-icons/MaterialCommunityIcons";

function App() {
  const [email, setEmail] = useState("");
  const [password, setPassword] = useState("");
  const [showPassword, setShowPassword] = useState(false);

  const handleClick = () => {
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (email.trim() === "") {
      Alert.alert("Email can't be empty");
    } else if (!emailPattern.test(email)) {
      Alert.alert("Invalid email format");
    } else if (password.trim() === "") {
      Alert.alert("Password can't be empty");
    } else if (password.length < 6) {
      Alert.alert("Password must be at least 6 characters");
    } else {
      Alert.alert("Login Successful âœ…");
      setEmail("");
      setPassword("");
    }
  };

  return (
    <View style={styles.container}>
      <Text style={styles.heading}>Welcome Back</Text>

      <TextInput
        style={styles.inputarea}
        placeholder="Email"
        placeholderTextColor="#aaa"
        keyboardType="email-address"
        autoCapitalize="none"
        value={email}
        onChangeText={setEmail}
      />

      <View style={styles.passwordWrapper}>
        <TextInput
          style={styles.inputarea}
          placeholder="Password"
          placeholderTextColor="#aaa"
          secureTextEntry={!showPassword}
          value={password}
          onChangeText={setPassword}
          autoCapitalize="none"
        />
        <TouchableOpacity
          style={styles.eyeIcon}
          onPress={() => setShowPassword((prev) => !prev)}
          activeOpacity={0.7}
        >
          <Icon
            name={showPassword ? "eye-off" : "eye"}
            size={28}
            color="#4da6ff" // lighter blue for dark background
          />
        </TouchableOpacity>
      </View>

      <TouchableOpacity
        style={styles.loginbtn}
        onPress={handleClick}
        activeOpacity={0.8}
      >
        <Text style={styles.loginText}>Log In</Text>
      </TouchableOpacity>

      <TouchableOpacity>
        <Text style={styles.signupText}>Don't have an account? Sign Up</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: "#121212", // dark background
    paddingHorizontal: 25,
    justifyContent: "center",
  },
  heading: {
    fontSize: 32,
    fontWeight: "700",
    color: "#fff", // white text
    marginBottom: 40,
    textAlign: "center",
  },
  inputarea: {
    height: 50,
    backgroundColor: "#1e1e1e", // dark input bg
    borderRadius: 12,
    paddingHorizontal: 20,
    fontSize: 16,
    marginBottom: 15,
    borderWidth: 1,
    borderColor: "#333", // subtle border
    color: "#eee", // light text
    paddingRight: 50, // space for eye icon
  },
  passwordWrapper: {
    position: "relative",
    marginBottom: 25,
  },
  eyeIcon: {
    position: "absolute",
    right: 15,
    top: Platform.OS === "ios" ? 14 : 12,
    padding: 4,
    backgroundColor: "#2a2a2a", // dark but visible bg behind icon
    borderRadius: 12,
  },
  loginbtn: {
    backgroundColor: "#2979ff", // bright blue button
    borderRadius: 25,
    height: 50,
    alignItems: "center",
    justifyContent: "center",
    shadowColor: "#2979ff",
    shadowOffset: { width: 0, height: 5 },
    shadowOpacity: 0.4,
    shadowRadius: 8,
    elevation: 5,
    marginBottom: 20,
  },
  loginText: {
    color: "#fff",
    fontSize: 18,
    fontWeight: "600",
  },
  signupText: {
    color: "#4da6ff",
    fontSize: 15,
    textAlign: "center",
    textDecorationLine: "underline",
  },
});

export default App;
